<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawableEnd="@drawable/ic_settings"
        android:text="Ajustes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/title_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Survey"
        android:textColor="#1C1515"
        android:fontFamily="serif-monospace"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/text_name_survey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_settings" />

    <TextView
        android:id="@+id/text_name_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="EP0144"
        android:visibility="gone"
        android:textColor="#FFC107"
        android:textSize="30sp"
        tools:visibility="visible"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/text_universe"
        app:layout_constraintTop_toBottomOf="@+id/title_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_universe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universo"
        android:visibility="gone"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        tools:visibility="visible"
        android:textStyle="italic|bold"
        android:fontFamily="serif-monospace"
        app:layout_constraintBottom_toTopOf="@+id/text_subtitle_universe"
        app:layout_constraintTop_toBottomOf="@+id/text_name_survey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_subtitle_universe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Personas mayores de 18 años de todos los niveles socioeconómicos, residentes en el casco rural de la ciudad de El Carmen."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        android:fontFamily="serif-monospace"
        tools:visibility="visible"
        android:textStyle="italic"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_start_survey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_universe" />

    <Button
        android:id="@+id/button_start_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFC107"
        android:text="Iniciar encuesta"
        app:layout_constraintBottom_toTopOf="@+id/button_send_surveys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_send_surveys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#4CAF50"
        android:text="Enviar encuestas"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>